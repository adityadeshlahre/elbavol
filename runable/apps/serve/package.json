{
  "name": "serve-pod",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --target bun --minify --sourcemap --bytecode ./src/index.ts --outdir .",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js"
  },
  "dependencies": {
    "@elbavol/constants": "workspace:*",
    "@elbavol/r2": "workspace:*",
    "@elbavol/types": "workspace:*",
    "dotenv": "^17.2.3",
    "kafkajs": "^2.2.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "^1.3.1",
    "tsdown": "^0.15.12",
    "typescript": "^5.9.3"
  }
}
